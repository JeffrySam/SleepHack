@page
@model SleepHack.Pages.LogModel
@{
    ViewData["Title"] = "Log";
}

    <head>
        <script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript"></script>
        <script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript"> </script>
        <script type="text/javascript">
            var inp = document.getElementById("date").textContext;
            alert("hello");
        </script>
    </head>

    <body style="background-color:#0f80d6;">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="jumbotron">
                    <h1 class="display-4 text-center">Sleep Log</h1>
                    <p class="lead">Track sleep times and other information through daily sleep logs!</p>
                    <hr class="my-4">
                    <form method="post">
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="sleepdate">When did you go to sleep? </label>
                                    <input class="form-control" id="sleepdate" asp-for="sleep" />
                                </div>                                
                                <p style="color:red;">@ViewData["dateError"]</p>
                            </div>
                        </div>                        
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="sleeptime">When did you wake up?</label>
                                    <input class="form-control" id="sleepdate" asp-for="wake" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="sleeprate">On a scale of 1-5, how well did you sleep?</label>
                            <select class="form-control" id="sleeprate" asp-for="sleeprate">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="sleepnotes">Any description/notes regarding your sleep?</label>
                            <textarea class="form-control" id="sleepnotes" rows="3" asp-for="sleepnotes"></textarea>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                        <p>@ViewData["test"]</p>
                    </form>                    
                </div>
            </div>
        </div>
    </body>

